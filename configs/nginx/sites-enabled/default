    server {
        listen 80;

        server_name  _;
        root   html;
        index  index.html index.htm index.php;
	
        location / {
            # Redirect to HotSpot Portal for wireless clients
            if ($remote_addr != 127.0.0.1) {
            rewrite  ^	http://172.16.0.1;
            }
        }

        location /stub_status {
            # monitoring support
            stub_status;
            # Security: Only allow access from the IP below.
            #allow 127.0.0.1;
            # Deny anyone else
            #deny all;
        }

        location ~ \.php$ {
            include  includes/php_params;
        }
 
    	location ~* \.(cgi|chi)$ {
            include  includes/cgi_params;
    	}  

    }
