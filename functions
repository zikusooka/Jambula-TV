load-module module-loopback source=$TV_AUDIO_SOURCE latency_msec=26" >> $PULSE_DEFAULT_CONFIG
}

v4l_utils_install () {
# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/v4l-utils-*.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v v4l-utils-* v4l-utils
# Compile
