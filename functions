./configure --prefix=$PREFIX --sysconfdir=$CONFDIR --libdir=$LIBDIR --localstatedir=$STATEDIR 
make_install_jambulatv
}

libdrm_install () {
# Remove libdrm rpm installed package(s)
rpm -q libdrm-devel > /dev/null 2>&1 && rpm -e --nodeps libdrm-devel
rpm -q libdrm > /dev/null 2>&1 && rpm -e --nodeps libdrm
#
# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/libdrm-*.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v libdrm-* libdrm
# Compile
cd $INSTALL_SRC_DIR/libdrm && ./configure --prefix=$PREFIX --libdir=$LIBDIR
make_install_jambulatv
}

xcb_proto_install () {
# Remove xcb-proto rpm installed package(s)
rpm -q xcb-proto-devel > /dev/null 2>&1 && rpm -e --nodeps xcb-proto-devel
rpm -q xcb-proto > /dev/null 2>&1 && rpm -e --nodeps xcb-proto
#
# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/xcb-proto-*.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v xcb-proto-* xcb-proto
# Compile
cd $INSTALL_SRC_DIR/xcb-proto && ./configure --prefix=$PREFIX --libdir=$LIBDIR
make_install_jambulatv
}

libpthread_stubs_install () {
# Remove libpthread-stubs rpm installed package(s)
rpm -q libpthread-stubs-devel > /dev/null 2>&1 && rpm -e --nodeps libpthread-stubs-devel
rpm -q libpthread-stubs > /dev/null 2>&1 && rpm -e --nodeps libpthread-stubs
#
# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/libpthread-stubs-*.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v libpthread-stubs-* libpthread-stubs
# Compile
cd $INSTALL_SRC_DIR/libpthread-stubs
./configure --prefix=$PREFIX --libdir=$LIBDIR
# IMPORTANT: Do not issue make!
make install
}

libxcb_install () {
# Remove libxcb rpm installed package(s)
rpm -q libxcb-devel > /dev/null 2>&1 && rpm -e --nodeps libxcb-devel
rpm -q libxcb > /dev/null 2>&1 && rpm -e --nodeps libxcb

# Add needed libpthread to pkgconfig path
cp -v $INSTALL_SRC_DIR/libpthread-stubs/*.pc $LIBDIR/pkgconfig/

# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/libxcb-*.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v libxcb-* libxcb
# Compile
cd $INSTALL_SRC_DIR/libxcb
./configure --prefix=$PREFIX --libdir=$LIBDIR PKG_CONFIG_PATH=$LIBDIR \
	--enable-devel-docs=no
make_install_jambulatv
}

