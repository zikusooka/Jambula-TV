cd $INSTALL_SRC_DIR && mv -v libvdpau-* libvdpau
# Compile
cd $INSTALL_SRC_DIR/libvdpau
./autogen.sh
./configure --prefix=$PREFIX --sysconfdir=$CONFDIR --libdir=$LIBDIR --localstatedir=$STATEDIR 
