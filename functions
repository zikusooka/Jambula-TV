python3_common_modules_install () {
for PYTHON_PACKAGE in \
pip==18.1 \
pytz==2017.2 \
setuptools_scm \
pytest-runner \
beautifulsoup4 \
pbr \
pycodestyle \
incremental \
vcversioner \
sqlalchemy==1.1.15 \
chardet==3.0.4 \
requests==2.18.4 \
httplib2 \
pyxmpp2 \
sleekxmpp \
jinja2==2.9.6 \
certifi==2017.4.17 \
six==1.10.0 \
ruamel.yaml==0.15.80 \
pyaml \
scapy \
nose \
coverage \
Cython \
docutils
do
# Install Python package
pip3 install --no-index --find-links $PROJECT_PIPS_DIR $PYTHON_PACKAGE
done
}

python3_install () {
# Remove existing python3 rpm based packages if any
rpm -q python3-libs > /dev/null 2>&1 && rpm -e --nodeps python3-libs
rpm -q python3-devel > /dev/null 2>&1 && rpm -e --nodeps python3-devel
rpm -q python3 > /dev/null 2>&1 && rpm -e --nodeps python3
#
PYTHON_SRC_TARBALL=$(ls -x $PROJECT_TARBALLS_DIR/Python-*.tar.xz)
PYTHON_SETUP_VERSION=$(echo ${PYTHON_SRC_TARBALL##*/} | sed 's:Python-::g' | cut -d '.' -f1-2)
export PYTHON_SETUP_VERSION
# Unpack Python 3 package
tar xvf $PROJECT_TARBALLS_DIR/Python-$PYTHON_SETUP_VERSION*.tar.xz -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v Python-$PYTHON_SETUP_VERSION* python${PYTHON_SETUP_VERSION}
# Compile
cd $INSTALL_SRC_DIR/python${PYTHON_SETUP_VERSION}
#
if [[ "$PYTHON_SETUP_VERSION" = "3.6" ]];
then
# Python 3.6
./configure --prefix=$PREFIX/local LDFLAGS="-Wl,-rpath=$PREFIX/local/ssl/lib64" --enable-shared --with-system-expat --with-ensurepip=yes --with-pydebug RPATH=$PREFIX/local/ssl/lib64 
else
# Python 3.7
./configure --prefix=$PREFIX/local LDFLAGS="-Wl,-rpath=$PREFIX/local/ssl/lib64" --with-openssl=$PREFIX/local --enable-shared --with-ssl-default-suites=python --with-system-expat --with-ensurepip=yes --with-pydebug
fi
# Patch python modules Setup file - This is mandatory
patch -p1 $INSTALL_SRC_DIR/python${PYTHON_SETUP_VERSION}/Modules/Setup < $PROJECT_PATCHES_DIR/python${PYTHON_SETUP_VERSION}.modules.setup.patch
# make and install in alternate locations
make && make altinstall

# Create symlinks to python binaries
[[ -L $PREFIX/local/bin/python3 ]] && rm -f $PREFIX/local/bin/python3
ln -s -v $PREFIX/local/bin/python${PYTHON_SETUP_VERSION} $PREFIX/local/bin/python3
# Create symlinks to pip binaries
[[ -L $PREFIX/local/bin/pip3 ]] && rm -f $PREFIX/local/bin/pip3
ln -s -v $PREFIX/local/bin/pip${PYTHON_SETUP_VERSION} $PREFIX/local/bin/pip3
# Create symlinks to python libraries
ln -s -v $PREFIX/local/lib/libpython${PYTHON_SETUP_VERSION}dm.so.1.0 $LIBDIR/libpython${PYTHON_SETUP_VERSION}dm.so.1.0

# Install commonly used python3 modules
python3_common_modules_install
}

meson_install () {
PYTHON_VERSION_USED=3 && set_python_version
tar zxvf $PROJECT_TARBALLS_DIR/meson-*.tar.gz -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v meson-* meson
# Compile
cd $INSTALL_SRC_DIR/meson 
$PYTHON_INSTALL_CMD --install-lib=$PYTHON_SITEDIR
}

ninja_install () {
PYTHON_VERSION_USED=3 && set_python_version
tar zxvf $PROJECT_TARBALLS_DIR/ninja-*.tar.gz -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v ninja-* ninja
# Compile
cd $INSTALL_SRC_DIR/ninja 
python3 configure.py --bootstrap
install -vm755 ninja /usr/bin/
install -vDm644 misc/ninja.vim /usr/share/vim/vim80/syntax/ninja.vim
install -vDm644 misc/bash-completion /usr/share/bash-completion/completions/ninja
install -vDm644 misc/zsh-completion /usr/share/zsh/site-functions/_ninja
}

intel_x11_driver_install () {
# Remove any existing intel drivers
yum -y remove xorg-x11-drv-intel-*
# check version
if [ "$INTEL_X11_DRIVER_VERSION" = "git" ];
then
rsync -avz --delete-after $PROJECT_GITHUB_DIR/xf86-video-intel/ $INSTALL_SRC_DIR/xf86-video-intel/
cd $INSTALL_SRC_DIR/xf86-video-intel
./autogen.sh
else
# Unpack
tar jxvf $PROJECT_TARBALLS_DIR/xf86-video-intel-$INTEL_X11_DRIVER_VERSION.tar.bz2 -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v xf86-video-intel-* xf86-video-intel
fi
#
# Compile all
cd $INSTALL_SRC_DIR/xf86-video-intel
./configure --prefix=$PREFIX --libdir=$LIBDIR --with-xorg-module-dir=$LIBDIR/xorg/modules
make_install_jambulatv
}

