rm -f $BINARY_PREFIX/kodi*
rm -rf $LIBDIR/kodi 
rm -rf $INCDIR/kodi
rm -rf $KODI_SHARE_DIR
rm -rf $KODI_CONFIG_DIR
# Core
[[ -d $KODI18_CORE_INSTALL_ROOT_DIR ]] && \
	rm -rf $KODI18_CORE_INSTALL_ROOT_DIR
# Pvr.hts
[[ -d $INSTALL_SRC_DIR/kodi-pvr.hts ]] && \
	rm -rf $INSTALL_SRC_DIR/kodi-pvr.hts
}

