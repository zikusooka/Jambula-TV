#KODI18_CMAKE_EXTRA_OPTIONS="-DADDON_TARBALL_CACHING=ON -DADDON_SRC_PREFIX=$KODI18_BINARY_ADDONS_BUILD_DIR"
##KODI18_CMAKE_EXTRA_OPTIONS="-DADDON_TARBALL_CACHING=ON -DTARBALLS_LOCATION=$KODI18_BINARY_ADDONS_DOWNLOAD_DIR -DTARBALL_DIR=$KODI18_BINARY_ADDONS_DOWNLOAD_DIR"

PREFERRED_KODI_CODENAME=$KODI18_CODENAME

# Install p8-platform for kodi versions above Isengard
if [[ "$PREFERRED_KODI_CODENAME" = "Isengard" ]];
then
PLATFORM_TAG=1.0.10
LIBCEC_TAG=libcec-2.2.0
else
PLATFORM_TAG=p8-platform-2.1.0.1 
LIBCEC_TAG=libcec-4.0.2
fi

KODI_CONFIG_DIR=$MULTIMEDIA_USER_HOME_DIR/.kodi
KODI_SHARE_DIR=$DATAROOTDIR/kodi
KODI_USER_DATA=$KODI_CONFIG_DIR/userdata
KODI_USER_ADDONS=$KODI_CONFIG_DIR/addons
