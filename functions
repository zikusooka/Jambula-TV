# Using yowsup github branch by AragurDEV
rsync -avz --delete-after $PROJECT_GITHUB_DIR/yowsup-AragurDEV/ $INSTALL_SRC_DIR/yowsup/
# Install
cd $INSTALL_SRC_DIR/yowsup
$PYTHON_INSTALL_CMD
#
# Create symbolic link
