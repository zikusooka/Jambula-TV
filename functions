libdrm_install
xcb_proto_install
libpthread_stubs_install
libxcb_install
libxshmfence_install
libvdpau_install
}

mesa_install () {
# Remove mesa rpms
rpm -e --nodeps $(rpm -qa | grep -i mesa)
#
# Install mesa dependencies
mesa_deps_install
#
# Unpack
tar xvf $PROJECT_TARBALLS_DIR/mesa-*.tar.xz -C $INSTALL_SRC_DIR
cd $INSTALL_SRC_DIR && mv -v mesa-* mesa
# Compile all
cd $INSTALL_SRC_DIR/mesa
./configure --prefix=$PREFIX --libdir=$LIBDIR --enable-fast-install --enable-vdpau --with-gallium-drivers="i915" 
make_install_jambulatv -j$SYSTEM_CPU_CORES
}

