	"epg_cutwindow": 300,
	"epg_window": 86400,
	"prefer_picon": false,
        "chiconpath": "file://$TVHEADEND_CHICON_DIR/%C.png",
	"chiconscheme": 0,
	"piconscheme": 0,
	"http_server_name": "HTS/tvheadend",
	"http_realm_name": "JambulaTV-HTS",
	"digest": 2,
	"cookie_expires": 7,
	"proxy": false,
	"http_user_agent": "TVHeadend/4.3-1236~g518d57b-dirty",
	"iptv_tpool": 4,
	"dscp": -1,
	"descrambler_buffer": 9000,
	"parser_backlog": false,
	"hbbtv": false,
