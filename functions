libva_install () {
# Remove libva rpm installed package(s)
for RPM_PKG in libva-vdpau-driver libva-drm1 libva-x11_1 libva1 libva-devel libva-tpi1 libva-glx1 libva-egl1
do
rpm -q $RPM_PKG > /dev/null 2>&1 && rpm -e --nodeps $RPM_PKG
done
#
rsync -avz $PROJECT_GITHUB_DIR/libva/ $INSTALL_SRC_DIR/libva/
# configure
cd $INSTALL_SRC_DIR/libva
./autogen.sh --prefix=$PREFIX --libdir=$LIBDIR 
make_install_jambulatv

# Create symbolic links for old libva libraries
for LIBRARY in libva libva-drm libva-x11 libva-glx
do
[[ -e $LIBDIR/$LIBRARY.so.1 ]] || ln -s $LIBDIR/$LIBRARY.so $LIBDIR/$LIBRARY.so.1
done
}

