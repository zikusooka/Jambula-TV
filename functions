	"force_sig_level": 0,
	"satip_dvbs": 0,
	"satip_dvbs2": 0,
	"satip_dvbt": 0,
	"satip_dvbt2": 0,
	"satip_dvbc": 0,
	"satip_dvbc2": 0,
