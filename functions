	sed -e "s:SIGNATURE_FILE    = '&/email.sig':SIGNATURE_FILE    = '$EMAIL_SIGNATURE_FILE':" | \
	sed -e 's/VCARD =/#VCARD =/g' > $EMAIL_CONFIG_DIR/email.conf
# Add email signature file
cat > $EMAIL_SIGNATURE_FILE << EOF
---------
