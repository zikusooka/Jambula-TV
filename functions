beeps_notification () {
$BEEP_CMD -f 65.4064 -l 100 -n -f 130.813 -l 100 -n -f 261.626 -l 100 -n -f 523.2
$BEEP_CMD -f 523.251 -l 100 -D 100 -n -f 391.995 -l 100 -D 100 -n -f 329.628 -l 10
$BEEP_CMD -f 600 -l 155 -n -f 800 -l 155 -n -f 500 -l 155 -n -f 400 -l 155 -n -f 400 -l 1
#
$BEEP_CMD -f 65.4064 -l 100 -n -f 130.813 -l 100 -n -f 261.626 -l 100 -n -f 523.2
$BEEP_CMD -f 523.251 -l 100 -D 100 -n -f 391.995 -l 100 -D 100 -n -f 329.628 -l 10
$BEEP_CMD -f 600 -l 155 -n -f 800 -l 155 -n -f 500 -l 155 -n -f 400 -l 155 -n -f 400 -l 1
#
$BEEP_CMD -f 65.4064 -l 100 -n -f 130.813 -l 100 -n -f 261.626 -l 100 -n -f 523.2
$BEEP_CMD -f 523.251 -l 100 -D 100 -n -f 391.995 -l 100 -D 100 -n -f 329.628 -l 10
$BEEP_CMD -f 600 -l 155 -n -f 800 -l 155 -n -f 500 -l 155 -n -f 400 -l 155 -n -f 400 -l 1
}

remote_workstation_notification () {
if [[ "x$1" != "x" && "x$2" != "x" ]];
then
# Run only if remote station is up
ping -c 3 -W 3 $2 > /dev/null 2>&1
if [[ "$?" = "0" ]];
then
echo "
Connected to the remote workstation at ${2}. Please wait while I notify ${1} ..."
# Beeps
ssh $1@$2 /usr/bin/aplay /usr/share/sounds/purple/alert.wav > /dev/null 2>&1
sleep 1
ssh $1@$2 /usr/bin/aplay /usr/share/sounds/purple/alert.wav > /dev/null 2>&1
sleep 1
ssh $1@$2 /usr/bin/aplay /usr/share/sounds/purple/alert.wav > /dev/null 2>&1
# Popup message
ssh $1@$2 /usr/bin/gxmessage -center -ontop -sticky -timeout 20 -title "$PROJECT_NAME" "Hi $1! Your attention is required by the program [$3] running at: $(hostname)"

else
echo "
Unable to access the remote workstation at ${2}. Skipped notifying ${1}"
fi

fi
}

_install_pause_check_4_errors_ () {
# Notify at Local workstation i.e. Here
beeps_notification

# Notify at Remote workstation - gxmessage needed there
remote_workstation_notification $PROJECT_ATTENDANT_USERNAME $PROJECT_ATTENDANT_HOSTNAME "$@"
# Pause and check for Errors
echo
echo
echo "Please enter to proceed ..."
echo
read
clear
}

kernel_upgrade_1 () {
SOURCESDIR=/opt
PROJECT_BASE_DIR=$SOURCESDIR/$PROJECT_NAME
# Source functions file
. $PROJECT_BASE_DIR/functions
KERNEL_VERSION=$NEW_KERNEL
KERNEL_CONFIG_VERS=$(echo $KERNEL_VERSION | cut -d '.' -f1-2)

# See how much space is left
kernel_check_4_space
#
# Check if desired kernel exists
uname -r | grep -i $KERNEL_VERSION > /dev/null 2>&1
if [ "$?" != "0" ];
then
# Unpack
tar xvf $PROJECT_TARBALLS_DIR/linux-$KERNEL_VERSION.tar.xz  -C $KERNELS_SRC_DIR
cd $KERNELS_SRC_DIR/
# Rename sources directory to our name
mv -v linux-$KERNEL_VERSION $KERNEL_VERSION.$KERNEL_NAME
cd $KERNELS_SRC_DIR/$KERNEL_VERSION.$KERNEL_NAME
#
# Apply patches
kernel_patches
#

cat <<EOF

WARNING!!!!
BEFORE PROCEEDING, CHECK TO SEE IF PATCHES ARE INSTALLED INPROPER LOCATION AND NOT UNDER

$KERNELS_SRC_DIR/drivers


EOF

_install_pause_check_4_errors_ "Kernel Upgrade"

# Change to kernel sources root directory
cd $KERNELS_SRC_DIR/$KERNEL_VERSION.$KERNEL_NAME
#
# Remove stale .o files and dependencies lying around
make mrproper
# Add our .config file
cp -v $PROJECT_CONFIGS_DIR/kernel.config.${KERNEL_CONFIG_VERS}.x .config
# Compile
make oldconfig
fi
}

kernel_upgrade_2 () {
# Set Linux kernel version
KERNEL_VERSION=$NEW_KERNEL
KERNEL_CONFIG_VERS=$(echo $KERNEL_VERSION | cut -d '.' -f1-2)
#
# Notice - Going to install
kernel_install_notice
#
cd $KERNELS_SRC_DIR/$KERNEL_VERSION.$KERNEL_NAME
make -j$SYSTEM_CPU_CORES bzImage
make -j$SYSTEM_CPU_CORES modules
make -j$SYSTEM_CPU_CORES modules_install
make -j$SYSTEM_CPU_CORES install
#
# Done
# ----
# Send notice to operator
_install_pause_check_4_errors_ "Kernel Compilation"
# Banner
echo
echo
cat << EOF
###############################################################################
                                                                             
    Done installing the kernel: $KERNEL_VERSION.$KERNEL_NAME                  
                                                                             
    Please perform the following tasks:

    1. Copy .config file to project configs directory

    2. Change Kernel Version in functions file

    3. Run: grub2-mkconfig -o /boot/grub2/grub.cfg

    4. Run: make clean

    5. You must REBOOT before proceeding
                                                                             
###############################################################################
EOF
exit
}



#########################
#  UNINSTALL FUNCTIONS  #
#########################
uninstall_src_pkgs () {
if [ -d $INSTALL_SRC_DIR/$1 ];
then
echo "Uninstalling the package: $1 ..."
cd $INSTALL_SRC_DIR/$1 
make uninstall && make clean && make distclean
cd $INSTALL_SRC_DIR
rm -rf $1
fi
#
whereis $1 > /dev/null
PKG_LEFTOVERS_EXIST=$?
[ "$PKG_LEFTOVERS_EXIST" != "0" ] || rm -rf `whereis $1`
}

uninstall_python_pkgs () {
#PYTHON_VERSION_USED=2 && set_python_version
PYTHON_VERSION_USED=3 && set_python_version
[ ! -d $PYTHON_SITEDIR/$1 ] || rm -rf $PYTHON_SITEDIR/$1
[ -d $PYTHON_SITEDIR/$1*.egg ] && rm -rf $PYTHON_SITEDIR/$1*.egg
whereis $1 > /dev/null
PKG_LEFTOVERS_EXIST=$?
[ "$PKG_LEFTOVERS_EXIST" != "0" ] || rm -rf `whereis $1`
}

uninstall_cmake_pkgs () {
echo "Uninstalling the package: $1 ..."
# Check for manifest in root path
if [ -f $INSTALL_SRC_DIR/$1/install_manifest.txt ];
then
xargs rm < $INSTALL_SRC_DIR/$1/install_manifest.txt
#
# Check for manifest in build path
elif [ -f $INSTALL_SRC_DIR/$1/build/install_manifest.txt ];
then
xargs rm < $INSTALL_SRC_DIR/$1/build/install_manifest.txt 
fi
#
# Remove sources
[ -d $INSTALL_SRC_DIR/$1 ] && rm -rf $INSTALL_SRC_DIR/$1
}

# Uninstall python3
uninstall_python3 () {
for PYTHON3_BINARY in \
	python3.*dm \
	python3.* \
	python3.*dm-config \
	pyvenv-3.* \
	pydoc3.* \
	idle3.* \
	2to3-3.* \
	pip3.* \
	coverage-3.* \
	f2py3.* \
	easy_install-3.*
do
rm -f $PREFIX/local/bin/$PYTHON3_BINARY
done

rm -f $LIBDIR/libpython3.*dm.so.1.0*
#rm -rf $PREFIX/local/lib/python3.*/site-packages
rm -rf $PREFIX/local/lib/python3.*/config-3.*dm-x86_64-linux-gnu
rm -f $PREFIX/local/lib/libpython3.*dm.so*
rm -f $PREFIX/local/lib/pkgconfig/python-3.*.pc
rm -rf $PREFIX/local/include/python3.*dm
rm -rf $PREFIX/local/share/man/man1/python3.*
rm -rf $INSTALL_SRC_DIR/python3*
}

# Uninstall kodi
uninstall_kodi17 () {
# Stop kodi
systemctl stop jambulatv@kodi.service
# Uninstall kodi
uninstall_src_pkgs kodi
}

uninstall_kodi_addons () {
for KODI_ADDON in $@
do
# Remove from system kodi addons share
if [ -d $KODI_SYSTEM_ADDONS/$KODI_ADDON ];
then
rm -rf $KODI_SYSTEM_ADDONS/$KODI_ADDON
#
echo
echo "$KODI_ADDON removed from $KODI_SYSTEM_ADDONS"
_install_pause_check_4_errors_ "$KODI_ADDON removed"
#
# Remove from user kodi addons share
elif [ -d $KODI_ADDON_DATA_DIR/$KODI_ADDON ];
then
rm -rf $KODI_ADDON_DATA_DIR/$KODI_ADDON
#
echo
echo "$KODI_ADDON removed from $KODI_ADDON_DATA_DIR"
_install_pause_check_4_errors_ "$KODI_ADDON removed"
fi
#
done
}

