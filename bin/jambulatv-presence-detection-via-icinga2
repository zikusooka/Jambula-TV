#!/bin/sh
# Perform actions based on whether a user is at or away from home 
# This is a very customized script that was useful for our home, 
# Several modifications will be required for your own scenario

HOSTSTATE=$1
HOSTDISPLAYNAME=$2
OSD_SCRIPT="sudo /usr/bin/jambulatv-osd"
LIGHTS_CMD="/usr/bin/jambulatv-lights"
SMARTHOME_HUB_LAMP_NAME="Living Room"



###############
#  FUNCTIONS  #
###############
# Zik
zik_tasks_present () {
# OSD Notice
$OSD_SCRIPT -m "Looks like $HOSTDISPLAYNAME is around!"
# Turn Off Lights
$LIGHTS_CMD "$SMARTHOME_HUB_LAMP_NAME" on
}

zik_tasks_absent () {
# OSD Notice
$OSD_SCRIPT -m "Looks like $HOSTDISPLAYNAME is away ..."
# Turn Off Lights
$LIGHTS_CMD "$SMARTHOME_HUB_LAMP_NAME" off
}

# Others
other_tasks_present () {
# OSD Notice
$OSD_SCRIPT -m "Looks like $HOSTDISPLAYNAME is around!"
}

other_tasks_absent () {
# OSD Notice
$OSD_SCRIPT -m "Looks like $HOSTDISPLAYNAME is away ..."
}



#################
#  MAIN SCRIPT  #
#################

# When user is Present
# --------------------
if [ "$HOSTSTATE" = "UP" ];
then

case $HOSTDISPLAYNAME in
Zik)
zik_tasks_present
;;
*)
other_tasks_present
;;
esac

fi



# When user is Absent
# -------------------
if [ "$HOSTSTATE" = "DOWN" ];
then

case $HOSTDISPLAYNAME in
Zik)
zik_tasks_absent
;;
*)
other_tasks_absent
;;
esac

fi
