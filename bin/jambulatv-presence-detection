#!/bin/sh
# Perform actions based on whether a user is at or away from home 

case $@ in
OK)
# TASK 1: Turn On Lights
/usr/bin/jambulatv-lights "Living Room" on

# TASK 2: 


# TASK 3:

;;

CRITICAL)
# TASK 1: Turn Off Lights
/usr/bin/jambulatv-lights "Living Room" off

# TASK 2:


# TASK 3:

;;
*)
echo "$(basename $0) [OK|CRITICAL]"
;;
esac
