if [[ "$APP_USED_TO_PLAY" = "snapcast" ]];
then
# toggle/unmute volume using snapcast if it is running 
set_sink_input_mute_snapcast_localhost 0

elif [[ "$APP_USED_TO_PLAY" = "mpd" ]];
then
# toggle/unmute volume using MPD if it is running 
