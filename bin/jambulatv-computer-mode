#!/bin/sh

case $1 in

# Switch to PC Mode
[Oo][Nn])
/usr/bin/beep
sudo /usr/bin/systemctl stop jambulatv-display-manager.service
/usr/bin/startx
;;

# Switch to Kodi
[Oo][Ff][Ff])
echo "sudo /usr/bin/systemctl restart jambulatv-display-manager.service" | /usr/bin/at now + 1 min
#sleep 30
/usr/bin/beep
pkill -9 -f lxsession || killall X
;;

*)
clear
echo "Usage: $(basename $0) [ON|OFF]"
;;

esac
