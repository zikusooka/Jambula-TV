#!/bin/sh
PCMODE_XSTART_CMD=/usr/bin/startx
PCMODE_LOG_FILE=/var/log/JambulaTV/pc-mode.log

case $1 in

# Switch to PC Mode
[Oo][Nn])
/usr/bin/beep
#nohup sudo /usr/bin/systemctl stop jambulatv@kodi.service > /dev/null 2>&1
nohup /usr/bin/killall kodi > /dev/null 2>&1
$PCMODE_XSTART_CMD > $PCMODE_LOG_FILE 2>&1 &
;;

# Switch to Kodi
[Oo][Ff][Ff])
nohup sudo /usr/bin/systemctl restart jambulatv@kodi.service > /dev/null 2>&1
/usr/bin/beep
pkill -9 -f lxsession
;;

*)
clear
echo "Usage: $(basename $0) [ON|OFF]"
;;

esac
