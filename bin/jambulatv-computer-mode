#!/bin/sh

# Check to see if kodi is running
ps acxw | grep kodi > /dev/null
KODI_RUNNING=$?


if [ "$KODI_RUNNING" = "0" ];
then
# Switch to PC Mode
/usr/bin/systemctl stop jambulatv-display-manager.service
su -l jambula -c "/usr/bin/startlxde"

else
# Switch to Kodi
su -l jambula -c "killall lxsession" || su -l jambula -c "killall X"
sleep 3
sudo /usr/bin/systemctl start jambulatv-display-manager.service
fi
