#!/bin/sh
# This is a helper script to extract credentials from HomeAssistant secrets.yaml file
#
# Jambula Labs @copyright 2019-2020 All rights reserved

# Variables
HOMEASSISTANT_CONFIG_DIR=MY_HOMEASSISTANT_CONFIG_DIR


# Extract credentials from HASS secrets file
for HASS_SECRET_ARG in $@
do
echo -n $(grep $HASS_SECRET_ARG $HOMEASSISTANT_CONFIG_DIR/secrets.yaml | cut -d ":" -f2- | sed "s:['|\"]::g") "" | sed "s:^  ::g"
done
